        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.campus.love.tweet.mapper.TopicMapper">

    <resultMap id="BaseResultMap" type="com.campus.love.tweet.entity.Topic">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="heading" column="heading" jdbcType="VARCHAR"/>
            <result property="participants" column="participants" jdbcType="INTEGER"/>
            <result property="tweetNum" column="tweet_num" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,heading,participants,
        tweet_num,create_time,
        update_time
    </sql>
</mapper>
